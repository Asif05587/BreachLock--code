import org.json.JSONArray;
import org.json.JSONObject;

public class SortData {

    public static void main(String[] args) {
        // Sample JSON data
        JSONObject data = new JSONObject();
        JSONArray dataArray = new JSONArray();
        dataArray.put(new JSONObject().put("country", "Belgium").put("capital", "Brussels"));
        dataArray.put(new JSONObject().put("country", "Netherlands").put("capital", "Amsterdam"));
        dataArray.put(new JSONObject().put("country", "Australia").put("capital", "Sydney"));
        dataArray.put(new JSONObject().put("country", "Austria").put("capital", "Vienna"));
        dataArray.put(new JSONObject().put("country", "Germany").put("capital", "Berlin"));
        data.put("data", dataArray);

        // Sort by country in ascending order
        sortData(data, "country");
        System.out.println("Sorted by country (ascending):");
        System.out.println(data);

        // Sort by country in descending order
        sortData(data, "-country");
        System.out.println("\nSorted by country (descending):");
        System.out.println(data);

        // Sort by capital in ascending order
        sortData(data, "capital");
        System.out.println("\nSorted by capital (ascending):");
        System.out.println(data);

        // Sort by capital in descending order
        sortData(data, "-capital");
        System.out.println("\nSorted by capital (descending):");
        System.out.println(data);
    }

    public static void sortData(JSONObject data, String sortKey) {
        JSONArray dataArray = data.getJSONArray("data");
        dataArray.sort((o1, o2) -> {
            JSONObject obj1 = (JSONObject) o1;
            JSONObject obj2 = (JSONObject) o2;
            String value1 = sortKey.startsWith("-") ? obj1.getString(sortKey.substring(1)) : obj1.getString(sortKey);
            String value2 = sortKey.startsWith("-") ? obj2.getString(sortKey.substring(1)) : obj2.getString(sortKey);
            return value1.compareTo(value2);
        });
        data.put("data", dataArray);
    }
}
